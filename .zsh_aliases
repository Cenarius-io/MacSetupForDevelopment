# get machine's ip address
alias ip="ipconfig getifaddr en0"

# edit global zsh configuration
alias zconfig="vim ~/.zshrc"
# edit global zsh_profile configuration
alias zprofile='vim ~/.zsh_profile'
# edit global zsh_aliases configuration
alias zalias='vim ~/.zsh_aliases'

# reload zsh configuration
alias zsource="source ~/.zshrc"
# reload zsh configuration
alias ohmyzsh="cd ~/.oh-my-zsh"

# CDs
alias work='cd ~/Work'

# Unix
alias c='clear'

# LS Stuff
alias ls='gls -F -1 --color=auto --group-directories-first'
alias ll='ls -la'
alias ld='ls -d */'
alias la='ls -CA'
